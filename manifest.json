{
  "manifest_version": 3,
  "name": "Lock In",
  "description": "Ajuda a manter o foco bloqueando sites distraidores e registrando tentativas.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/lock-16.png",
    "48": "icons/lock-48.png",
    "128": "icons/lock-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lock In"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
